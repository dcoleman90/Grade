<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.westga.cs.schoolgrades.views.GUIController">
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
   <children>
      <Button mnemonicParsing="false" onAction="#addQuizButton" onMouseClicked="#addQuizButton" text="Add Quiz" GridPane.columnIndex="2" GridPane.rowIndex="3">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </Button>
      <Button mnemonicParsing="false" onAction="#addExamButton" text="Add Exam" GridPane.rowIndex="3" />
      <ListView fx:id="lvHomework" prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
      <ListView fx:id="lvQuiz" prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="2" GridPane.rowIndex="1" />
      <ListView fx:id="lvExam" editable="true" prefHeight="200.0" prefWidth="200.0" GridPane.rowIndex="1" />
      <Button mnemonicParsing="false" onAction="#addHomeworkButton" text="Add Homework" GridPane.columnIndex="1" GridPane.rowIndex="3" />
   </children>
</GridPane>
